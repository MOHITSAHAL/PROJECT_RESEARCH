# Environment Configuration
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration
# Development (SQLite)
DATABASE_URL=sqlite:///./research_papers.db
# Production (PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/research_papers

DATABASE_ECHO=false

# Graph Database (Neo4j)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Cache (Redis)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Vector Database
VECTOR_DB_PROVIDER=weaviate
WEAVIATE_URL=http://localhost:8080
# Alternative: Pinecone
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=your-pinecone-environment

# AI/ML APIs
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
COHERE_API_KEY=your-cohere-api-key

# LiteLLM Configuration (for development)
LITELLM_API_KEY=your-litellm-api-key
LITELLM_BASE_URL=https://api.litellm.ai/v1
USE_LITELLM=false

# AI Agent Configuration
DEFAULT_AGENT_MODEL=gpt-3.5-turbo
AGENT_TEMPERATURE=0.1
MAX_AGENT_MEMORY=20
AGENT_TIMEOUT=60
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8765

# Message Queue
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# AWS Configuration (Production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=your-s3-bucket

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Paper Processing
ARXIV_RATE_LIMIT=3
MAX_PAPERS_PER_BATCH=100
GITHUB_TOKEN=your-github-token
PDF_PROCESSING_TIMEOUT=300
MAX_PDF_SIZE_MB=50

# Agent Configuration
DEFAULT_AGENT_MODEL=gpt-3.5-turbo
MAX_AGENT_MEMORY=10
AGENT_TIMEOUT=30

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO